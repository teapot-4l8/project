<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/headerbar"/>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_logo" android:paddingTop="30dp" android:paddingBottom="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_login_logo"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:layout_marginStart="50dp" android:layout_marginEnd="50dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@mipmap/ic_login_phone" android:layout_marginEnd="12dp"/>
                <EditText android:textSize="15sp" android:textColor="@color/colorBlack" android:textColorHint="@color/text_color_hint" android:ellipsize="end" android:id="@+id/et_phone" android:background="@null" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="请输入手机号" android:inputType="phone"/>
            </LinearLayout>
            <View android:background="@color/edit_bottom_line" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@mipmap/ic_login_code" android:layout_marginEnd="12dp"/>
                <EditText android:textSize="15sp" android:textColor="@color/colorBlack" android:textColorHint="@color/text_color_hint" android:ellipsize="end" android:id="@+id/et_captcha" android:background="@null" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="请输入验证码" android:layout_weight="1" android:inputType="phone"/>
                <View android:background="#2a2c3a" android:visibility="gone" android:layout_width="0.5dp" android:layout_height="match_parent" android:layout_marginTop="4dp" android:layout_marginRight="16dp" android:layout_marginBottom="4dp" android:layout_marginEnd="16dp"/>
                <TextView android:textSize="15sp" android:textColor="@color/colorPrimary" android:id="@+id/tv_send_captcha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="发送验证码" android:layout_marginStart="10dp"/>
            </LinearLayout>
            <View android:background="@color/edit_bottom_line" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:src="@mipmap/ic_login_pwd" android:layout_marginEnd="12dp"/>
                <EditText android:textSize="15sp" android:textColor="@color/colorBlack" android:textColorHint="@color/text_color_hint" android:ellipsize="end" android:id="@+id/et_pwd" android:background="@null" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="请输入新密码" android:layout_weight="1" android:inputType="textPassword"/>
            </LinearLayout>
            <View android:background="@color/edit_bottom_line" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        </LinearLayout>
        <Button android:textSize="15sp" android:textColor="@color/colorWhite" android:id="@+id/btn_forget" android:background="@drawable/common_bg_radius_yellow" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="30dp" android:text="确 定" style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
