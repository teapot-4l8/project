<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/headerbar" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="44dp">
    <LinearLayout android:id="@+id/ll_back" android:paddingLeft="16dp" android:paddingRight="30dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:paddingStart="16dp" android:paddingEnd="30dp" android:layout_alignParentStart="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_back_arrow"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/sp_17" android:textStyle="bold" android:textColor="@color/colorBlack" android:ellipsize="middle" android:gravity="center" android:id="@+id/headerbar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true"/>
    <LinearLayout android:id="@+id/ll_right" android:paddingLeft="30dp" android:paddingRight="24dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentRight="true" android:paddingStart="30dp" android:paddingEnd="24dp" android:layout_alignParentEnd="true">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/iv_right" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="13sp" android:textColor="#9c9595" android:layout_gravity="center_vertical" android:id="@+id/tv_right_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
