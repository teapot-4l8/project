<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_dialog" android:background="@drawable/common_bg_radius_white_light" android:padding="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_marginRight="28dp" android:layout_centerInParent="true" android:layout_marginStart="28dp" android:layout_marginEnd="28dp">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/primary_text" android:layout_gravity="center_horizontal" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="退出登录"/>
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:id="@+id/content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="确认退出登录吗？" android:lineSpacingMultiplier="1.2"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="30dp">
            <Button android:textSize="16sp" android:textColor="@color/colorWhite" android:layout_gravity="center_horizontal" android:id="@+id/cancel" android:background="@drawable/common_bg_radius_gray" android:layout_width="0dp" android:layout_height="match_parent" android:text="取消" android:layout_weight="1" style="?android:attr/borderlessButtonStyle"/>
            <View android:id="@+id/button_divider" android:layout_width="20dp" android:layout_height="wrap_content"/>
            <Button android:textSize="16sp" android:textColor="@color/colorWhite" android:layout_gravity="center" android:id="@+id/confirm" android:background="@drawable/common_bg_radius_yellow" android:layout_width="0dp" android:layout_height="match_parent" android:text="确定" android:layout_weight="1" style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
