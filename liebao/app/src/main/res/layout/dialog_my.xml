<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/bg_round" android:paddingTop="16dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/primary_text" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="设置"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_account" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="我的账号" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:id="@+id/tv_account" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_bind" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="绑定账号" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_speed" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="加速器设置" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_notice" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:id="@+id/tv_notice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="公告" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <View android:id="@+id/dot_red_notice" android:background="@drawable/icon_dot_red" android:visibility="gone" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_notice_arrow" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_notice_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_feedback" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:id="@+id/tv_feedback" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="问题反馈" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <View android:id="@+id/dot_red_feedback" android:background="@drawable/icon_dot_red" android:visibility="gone" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_feedback_arrow" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_feedback_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_help" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="常见问题" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_item_privacy" android:paddingTop="16dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="隐私协议" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/rl_setting_more" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="@color/primary_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="更多设置" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <View android:id="@+id/dot_red_more" android:background="@drawable/icon_dot_red" android:visibility="gone" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/iv_more_arrow" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/iv_more_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_common_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
