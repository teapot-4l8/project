<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="18sp" android:textColor="@color/colorPrimary" android:gravity="center_vertical" android:id="@+id/tv_level" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="10dp" android:layout_marginBottom="14dp"/>
    <RelativeLayout android:background="@drawable/common_bg_radius_white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp">
        <ImageView android:id="@+id/iv_flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_flag_china" android:layout_centerVertical="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_toLeftOf="@+id/tv_ping" android:layout_toRightOf="@+id/iv_flag" android:layout_centerVertical="true">
            <TextView android:textColor="@color/primary_text" android:ellipsize="end" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10sp" android:textColor="#777777" android:ellipsize="end" android:id="@+id/tv_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp"/>
        </LinearLayout>
        <TextView android:textColor="@color/colorPrimary" android:id="@+id/tv_ping" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="36dp" android:text="100MS" android:layout_toLeftOf="@+id/iv_route_select" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_route_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_route_unselect" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
