<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/rootBg" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TableLayout android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="1">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Url" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_url" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Method" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_method" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Protocol" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_protocol" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Response" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_response" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SSL" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_ssl" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Request Time" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_request_time" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Response Time" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_response_time" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Duration" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Request Size" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_request_size" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Response Size" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_response_size" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Size" style="@style/monitor.TextAppearance.Label"/>
            <TextView android:id="@+id/tv_total_size" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/monitor.TextAppearance.Value"/>
        </TableRow>
    </TableLayout>
</androidx.core.widget.NestedScrollView>
