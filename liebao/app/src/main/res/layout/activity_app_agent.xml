<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="#f8f9fa" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/headerbar"/>
