            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView_search" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </com.speed.speed_library.widget.LoadingLayout>
</LinearLayout>
